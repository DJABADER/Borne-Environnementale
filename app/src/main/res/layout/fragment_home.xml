<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mchav.projetborne.HomeFragment"
    android:background="@drawable/fond"
    app:menu="@menu/navigation">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:id="@+id/fragHOME"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:menu="@menu/navigation">

        <ImageView
            android:id="@+id/ImageUV"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="500dp"
            android:layout_marginStart="100dp"
            android:src="@drawable/rondbleu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/ImageUV"
        app:layout_constraintStart_toStartOf="@+id/ImageUV"
        app:layout_constraintTop_toTopOf="@+id/ImageUV" />

    <ProgressBar
        android:id="@+id/progress1"
        style="?android:attr/progressBarStyle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="@+id/text1"
        app:layout_constraintStart_toStartOf="@+id/text1"
        app:layout_constraintTop_toTopOf="@+id/ImageUV" />

        <ImageView
            android:id="@+id/ImageRAD"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="500dp"
            android:layout_marginEnd="100dp"
            android:src="@drawable/rondbleu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/ImageRAD"
        app:layout_constraintStart_toStartOf="@+id/ImageRAD"
        app:layout_constraintTop_toTopOf="@+id/ImageRAD" />

    <ProgressBar
        android:id="@+id/progress2"
        style="?android:attr/progressBarStyle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="@+id/text2"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="@+id/text2"
        app:layout_constraintTop_toTopOf="@+id/text2" />

        <TextView
            android:id="@+id/Bq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:text="Bq/min"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="@+id/ImageRAD"
            app:layout_constraintEnd_toEndOf="@+id/ImageRAD"
            app:layout_constraintStart_toStartOf="@+id/ImageRAD" />

    <TextView
        android:id="@+id/UV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="Indice UV"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/ImageUV"
        app:layout_constraintEnd_toEndOf="@+id/ImageUV"
        app:layout_constraintStart_toStartOf="@+id/ImageUV" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="339dp"
            android:layout_marginStart="339dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/leaf"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:text="Projet Borne Environnementale"
            android:textAllCaps="false"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <WebView
            android:id="@+id/meteo"
            android:layout_width="565dp"
            android:layout_height="250dp"
            android:layout_marginBottom="150dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.SwipeRefreshLayout>